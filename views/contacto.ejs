  <script>
    // Inicializar animaciones
    AOS.init({ once: true, duration: 800, easing: 'ease-out-cubic', offset: 100 });

    // Efecto scroll en Navbar
    window.addEventListener('scroll', () => {
      const nav = document.querySelector('.navbar');
      if (nav) nav.classList.toggle('scrolled', window.scrollY > 50);
    });

    // ============================================
    // LÓGICA DEL MENÚ HAMBURGUESA ARREGLADA
    // ============================================
    document.addEventListener('DOMContentLoaded', function () {
      // Seleccionamos el contenedor COMPLETO del logo
      const logoToggle = document.getElementById('logoToggle');
      const logoIcon = document.querySelector('.logo i');
      const navMenu = document.getElementById('navMenu');

      // Creamos el overlay si no existe
      let menuOverlay = document.querySelector('.menu-overlay');
      if (!menuOverlay) {
        menuOverlay = document.createElement('div');
        menuOverlay.className = 'menu-overlay';
        document.body.appendChild(menuOverlay);
      }

      let isMenuOpen = false;

      function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        navMenu.classList.toggle('active');
        menuOverlay.classList.toggle('active');
        document.body.classList.toggle('menu-open');

        // Animación de la tijera
        if (isMenuOpen) {
          logoIcon.style.transform = 'rotate(90deg)';
          logoIcon.style.color = 'var(--celeste-suave)';
        } else {
          logoIcon.style.transform = 'rotate(0deg)';
          logoIcon.style.color = 'var(--celeste)';
        }
      }

      function handleClick(e) {
        // Solo activamos en pantallas pequeñas (<= 992px)
        if (window.innerWidth <= 992) {
          e.preventDefault(); // Evita que el enlace recargue la página
          e.stopPropagation();
          toggleMenu();
        }
      }

      // Asignamos el evento al logo entero
      if (logoToggle) {
        logoToggle.addEventListener('click', handleClick);
      }

      // Cerrar al dar click fuera
      menuOverlay.addEventListener('click', function () {
        if (window.innerWidth <= 992 && isMenuOpen) toggleMenu();
      });

      // Cerrar al dar click en un enlace del menú
      const navLinks = document.querySelectorAll('.nav-link');
      navLinks.forEach(link => {
        link.addEventListener('click', function () {
          if (window.innerWidth <= 992 && isMenuOpen) toggleMenu();
        });
      });

      // Resetear si se agranda la pantalla
      window.addEventListener('resize', function () {
        if (window.innerWidth > 992 && isMenuOpen) toggleMenu();
      });
    });
  </script>
